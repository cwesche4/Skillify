{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "tests/**/*.js",
        "tests/**/*.jsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "*.config.ts",
        "*.config.js",
        "scripts/**/*.ts",
        "scripts/**/*.js"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "build"
    ]
}